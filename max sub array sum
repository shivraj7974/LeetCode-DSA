function maxSum(arr, k) {
    let windowSum = 0;
    let maxSum = 0;

    // first window
    for (let i = 0; i < k; i++) {
        windowSum += arr[i];
    }

    maxSum = windowSum;

    // slide window
    for (let i = k; i < arr.length; i++) {
        windowSum += arr[i];      // add new
        windowSum -= arr[i - k];  // remove old

        maxSum = Math.max(maxSum, windowSum);
    }

    return maxSum;
}
